<!DOCTYPE html>
<html lang="en">
<%- include ('./partials/head.ejs') %>

    <body>
        <%- include ('./partials/header.ejs') %>
<main>
    <div class="container-products-wrapper">
		
				<h2 class="products-title">Formulario de creación de productos</h2>
       
            <div class="col-12">
			<form action="/products" method="post" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name"  class="form-input">
					</div>
					<div class="col-12 col-md-6">
                        <label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"></textarea>
					</div>
                </div>
            </div>
        
            <div class="col-13">
					<div class="col-12 col-md-6">
                        <label for="category" class="form-label">Categoría:</label>
						<select required name="category">
							<% categories.forEach(category => { %>
								<option value="<%= category.id%>"><%=category.description%></option>
								<% }) %>  
						</select>
					</div>
					<div class="col-12 col-md-6">
                        <label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price"  class="form-input">
					</div>
                    <div class="col-12">
                        <label for="offer" class="form-label">En Oferta:</label>
                        <select name = "offer" class="form-input">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select> 
						<div class="col-12 col-md-6">
							<label for="discount" class="form-label">% de Descuento:</label>
							<input type="text" id="discount" name="discount" class="form-input">
						</div>
                        
                    </div>
                </div>
    
					<div class="col-12 col-md-6" id="img-product">
                        <label for="image" class="form-label">Imagen del Producto</label>
						<input type="file" id="images" name="images" multiple>
					</div> 
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				
			</form>
        </div>
		

	
</main>    
 

<%- include ('./partials/footer.ejs') %>

</body>

</html>