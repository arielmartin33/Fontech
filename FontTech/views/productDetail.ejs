<!DOCTYPE html>
<html lang="en">
<%- include ('./partials/head.ejs') %>

    <body>
        <%- include ('./partials/header.ejs') %>
            <main>
                <div class="contenedor-producto">
                    
                        <div class="escritorio">
                            <div class="h3">
                                <h3><%= product.productName %></h3>
                            </div>
                            <div class="producto-imgs">
                                <% product.images.forEach(element => { %>
                                    <div class="img-principal">
                                        <img src="/img/product/<%= element.url %>" alt="imagen del prod.">
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                        <div class="escritorio">
                            <div class="descripcion-producto">
                                <h2><%= product.productName %></h2>
                                <p><%= product.productDescription %></p>
                                <p><%= product.productCategory %></p>
                                <p><%= product.productPrice %></p>
                                <p><%= product.productDiscount %></p>
                            </div>
                            <div class="pagos">
                                <h5>Medios de pago</h5>
                                <img src="../img/mercado-pago-banner.png" alt="">
                            </div>
                            <div class="btn-producto">
                                <button>COMPRAR <i class="fas fa-cart-plus"></i> </button>
                            </div>
                        </div>
                    </div>
            </main>

            <%- include ('./partials/footer.ejs') %>

    </body>

</html>