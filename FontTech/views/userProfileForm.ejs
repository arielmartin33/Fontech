<div class="containerUser" style="margin-top: 20px;">

    <nav class="user">
        <ul>
            <% if (locals.isLogged) { %>
            <li>
                <img src="/img/users/<%= locals.userLogged.imageUrl%>" width="60" height="60" style="border-radius:100%;">
               
            </li>
            
            <% } else { %>
            <li>
                <a href="/user/login">Ingresar</a>
            </li>
            <a href="/user/register">Registrarse</a>
            <% } %> 
        </ul>
    </nav>
    <div class="row">
        <div class="col-md-3">
            <h2>Hola <%= user.nombre %> </h2>
            <img src="/img/users/<%= user.imageUrl%> ">
        
            <div class="alert alert-success"><%= user.email %> </div>
        </div>
    </div>
</div>
